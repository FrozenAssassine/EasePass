<Page
    x:Class="EasePass.Views.PasswordsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    NavigationCacheMode="Enabled"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:models="using:EasePass.Models" 
    xmlns:controls="using:EasePass.Controls" 
    xmlns:database="using:EasePass.Core.Database" 
    xmlns:Converter="using:EasePass.Converter" 
    xmlns:communityToolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    PreviewKeyDown="Page_KeyDown"
    Background="Transparent"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Converter:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <Converter:NullToVisibilityConverter_Inverted x:Key="NullToVisibilityConverter_Inverted"/>
        <Converter:NullOrEmptyToVisibilityConverter_Inverted x:Key="NullOrEmptyToVisibilityConverter_Inverted"/>
        <Converter:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
        <Converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Converter:NullToBoolConverter x:Key="NullToBoolConverter"/>

        <Style x:Key="DetailLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundAccentBrush}"/>
            <Setter Property="Margin" Value="0,20,0,4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="gridSplitterLoadSize" Width="300" MinWidth="250" MaxWidth="500"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="12,12,12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <controls:LabeledTextBox x:Uid="View_PasswordPage_Searchbox" 
                                       InfoLabel="{x:Bind database:Database.LoadedInstance.Items.Count.ToString(), Mode=OneWay}"  
                                       PreviewKeyDown="Searchbox_PreviewKeyDown" 
                                       PlaceholderText="Search" 
                                       x:Name="searchbox" 
                                       TextChanged="Searchbox_TextChanged"/>

                <DropDownButton Grid.Column="1" Margin="8,0,0,0" ToolTipService.ToolTip="Sort">
                    <DropDownButton.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8CB;"/>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Name" x:Uid="View_PasswordPage_SortName" Click="SortName_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortname" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Username" x:Uid="View_PasswordPage_SortUsername" Click="SortUsername_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortusername" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Notes" x:Uid="View_PasswordPage_SortNotes" Click="SortNotes_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortnotes" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Website" x:Uid="View_PasswordPage_SortWebsite" Click="SortWebsite_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortwebsite" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Popular last year" x:Uid="View_PasswordPage_SortPopularLastYear" Click="SortPopularAll_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortpopularall" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Popular last 30 days" x:Uid="View_PasswordPage_SortPopular30Days" Click="SortPopular30_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortpopular30" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Password Strength" x:Uid="View_PasswordPage_SortStrength" Click="SortPasswordStrength" ToolTipService.ToolTip="The sort function contain no check for duplicate passwords and leaked passwords due to performance drops.">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon x:Name="sortpasswordstrength" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Glyph="&#xE73E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem Text="Switch ascending/descending" x:Uid="View_PasswordPage_SwitchAscendingDescending" Click="SwitchOrder_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8CB;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <ListView Grid.Row="1" x:Name="passwordItemListView" 
                      ItemsSource="{x:Bind database:Database.LoadedInstance.Items}" 
                      SelectionChanged="PasswordItemListView_SelectionChanged"
                      Padding="0,0,0,20">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:PasswordManagerItem">
                        <Grid Padding="4" Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <Image Width="32" Height="32" Stretch="UniformToFill" Source="{x:Bind Icon, Mode=OneWay}" 
                                       Visibility="{x:Bind Icon, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                                <Border Width="32" Height="32" CornerRadius="16" Background="{x:Bind BackColor, Mode=OneWay}"
                                        Visibility="{x:Bind Icon, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter_Inverted}}">
                                    <TextBlock Text="{x:Bind FirstChar, Mode=OneWay}" Foreground="{x:Bind ForeColor, Mode=OneWay}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                </Border>
                            </Grid>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind Username, Mode=OneWay}" FontSize="12" Opacity="0.6" 
                                           Visibility="{x:Bind Username, Converter={StaticResource NullOrEmptyToVisibilityConverter}, Mode=OneWay}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <CommandBar Grid.Row="2" DefaultLabelPosition="Right" Background="Transparent" HorizontalAlignment="Left" Margin="4">
                <AppBarButton Icon="Add" Label="New" Click="AddPasswordItem_Click"/>
                <AppBarButton Icon="Back" Click="LogOut_Click" Label="Logout"/>
                <AppBarButton Icon="Setting" Label="Settings" Click="Settings_Click"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Import" x:Name="loadTempDBButton" Click="LoadTemporaryDatabase_Click"/>
            </CommandBar>
        </Grid>

        <communityToolkit:GridSplitter Grid.Column="1"
                               Width="16"
                               HorizontalAlignment="Center"
                               ResizeBehavior="BasedOnAlignment"
                               ResizeDirection="Auto" VerticalAlignment="Stretch"/>

        <Grid Grid.Column="2" Padding="40,30" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Stretch" Grid.Row="0" Margin="0,0,0,32" Visibility="{x:Bind SelectedItem, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1">
                    <TextBlock Text="{x:Bind SelectedItem.DisplayName, Mode=OneWay}" FontSize="36" FontWeight="Bold"/>
                    <HyperlinkButton Content="{x:Bind SelectedItem.Website, Mode=OneWay}" 
                                     Visibility="{x:Bind SelectedItem.Website, Converter={StaticResource NullOrEmptyToVisibilityConverter}, Mode=OneWay}"
                                     Padding="0" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Top">
                    <Button Click="EditPasswordItem_Click" Style="{ThemeResource AccentButtonStyle}" Padding="16,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Edit"/>
                            <TextBlock Text="Edit Entry"/>
                        </StackPanel>
                    </Button>
                    <Button Click="Add2FAPasswordItem_Click" ToolTipService.ToolTip="2FA">
                        <SymbolIcon Symbol="Permissions"/>
                    </Button>
                    <Button Click="DeletePasswordItem_Click" Foreground="{ThemeResource SystemFillColorCriticalBrush}">
                        <SymbolIcon Symbol="Delete"/>
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" x:Name="passwordShowArea" 
                          Visibility="{x:Bind SelectedItem, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}"
                          VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1" MaxWidth="600" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="CREDENTIALS" Style="{StaticResource DetailLabelStyle}" Margin="0,0,0,8"/>

                        <controls:CopyTextbox Grid.Row="1" Text="{x:Bind SelectedItem.Username, Mode=OneWay}" Header="Username" Margin="0,0,0,16"/>
                        <controls:CopyTextbox Grid.Row="2" Text="{x:Bind SelectedItem.Email, Mode=OneWay}" Header="Email Address" Margin="0,0,0,16"/>
                        <controls:CopyPasswordbox Grid.Row="3" Password="{x:Bind SelectedItem.Password, Mode=OneWay}" Header="Password" x:Name="pwTB" Margin="0,0,0,16"/>

                        <TextBlock Grid.Row="4" Text="SECURITY &amp; EXTRA" Style="{StaticResource DetailLabelStyle}" Margin="0,12,0,8"/>

                        <controls:CopyTextbox Grid.Row="5" Header="TOTP Token" 
                                         Visibility="{x:Bind SelectedItem.Secret, Converter={StaticResource NullOrEmptyToVisibilityConverter}, Mode=OneWay}"
                                         Text="{x:Bind SelectedItem.Secret, Mode=OneWay}" x:Name="totpTB" Margin="0,0,0,16"/>

                        <controls:CopyTextbox Grid.Row="6" Header="Notes" 
                                         Text="{x:Bind SelectedItem.Notes, Mode=OneWay}" 
                                         AcceptsReturn="True" Height="120" Margin="0,0,0,16"/>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <Grid Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                  x:Name="oobe_Grid" Visibility="Collapsed">
                <StackPanel Spacing="12" MaxWidth="400">
                    <TextBlock FontSize="28" FontWeight="Bold" Text="Welcome to Ease Pass" TextAlignment="Center"/>
                    <TextBlock Text="Select an entry from the list or create a new one to get started." TextAlignment="Center" Opacity="0.7" TextWrapping="Wrap"/>
                    <Button Content="Create New Entry" HorizontalAlignment="Center" Margin="0,10,0,0" Click="AddPasswordItem_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>